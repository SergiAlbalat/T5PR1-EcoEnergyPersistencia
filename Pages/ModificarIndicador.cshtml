@page
@model EcoEnergyRazorProject.Pages.ModificarIndicadorModel
@{
	ViewData["Title"] = "Modificar Indicador Energètic";
}
<h2>Afegir Indicador Eneretic</h2>
<form method="post">
	<input type="hidden" asp-for="@Model.IndicadorEnergetic.Id"/>
	<div class="form-group">
		<label asp-for="IndicadorEnergetic.Data">
			Data:
			<input asp-for="IndicadorEnergetic.Data" class="form-control" value="@Model.IndicadorEnergetic.Data"/>
			<span asp-validation-for="IndicadorEnergetic.Data" class="text-danger"></span>
		</label>
	</div>
	<div class="form-group">
		<label asp-for="IndicadorEnergetic.CDEEBC_ProdNeta">
			Producció Neta:
			<input asp-for="IndicadorEnergetic.CDEEBC_ProdNeta" class="form-control" value="@Model.IndicadorEnergetic.CDEEBC_ProdNeta"/>
			<span asp-validation-for="IndicadorEnergetic.CDEEBC_ProdNeta" class="text-danger"></span>
		</label>
	</div>
	<div class="form-group">
		<label asp-for="IndicadorEnergetic.CCAC_GasolinaAuto">
			Consum de gasolina d'automobil':
			<input asp-for="IndicadorEnergetic.CCAC_GasolinaAuto" class="form-control" value="@Model.IndicadorEnergetic.CCAC_GasolinaAuto"/>
			<span asp-validation-for="IndicadorEnergetic.CCAC_GasolinaAuto" class="text-danger"></span>
		</label>
	</div>
	<div class="form-group">
		<label asp-for="IndicadorEnergetic.CDEEBC_DemandaElectr">
			Demanda Elèctrica:
			<input asp-for="IndicadorEnergetic.CDEEBC_DemandaElectr" class="form-control" value="@Model.IndicadorEnergetic.CDEEBC_DemandaElectr"/>
			<span asp-validation-for="IndicadorEnergetic.CDEEBC_DemandaElectr" class="text-danger"></span>
		</label>
	</div>
	<div class="form-group">
		<label asp-for="IndicadorEnergetic.CDEEBC_ProdDisp">
			Producció Disponible:
			<input asp-for="IndicadorEnergetic.CDEEBC_ProdDisp" class="form-control" value="@Model.IndicadorEnergetic.CDEEBC_ProdDisp"/>
			<span asp-validation-for="IndicadorEnergetic.CDEEBC_ProdDisp" class="text-danger"></span>
		</label>
	</div>
	<br />
	<button type="submit" class="btn btn-primary" id="Enviar">Afegir</button>
</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}